root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.bat]
end_of_line = crlf
indent_style = tab

[LICENSE]
insert_final_newline = false

[Makefile]
indent_style = tab

[*.{diff,patch}]
trim_trailing_whitespace = false
